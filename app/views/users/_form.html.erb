<% provide :title, t(".title_n") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, url: signup_path, local: true do |f| %>
      <%= render "shared/error_mesages" %>
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t(".email") %>
      <%= f.email_field :email %>
      <%= f.label :password, t(".pass") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t(".cf_pass") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
